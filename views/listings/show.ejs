
<% layout("./layout/boilerplate.ejs") -%>
<div class="d-flex justify-content-center" style="margin-top: 100px;">
  <div class="card shadow" style="width: 25rem;">
    
    <img
      src="<%= listing.image.url %>"
      class="card-img-top"
      alt="image"
      style="height: 200px; object-fit: cover;"
    />

    <div class="card-body">
      <h5 class="card-title mb-3">Listing Details</h5>

      <p><strong>Title:</strong> <%= listing.title %></p>
      <p><strong>Description:</strong> <%= listing.description %></p>
      <p><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
      <p><strong>Country:</strong> <%= listing.country %></p>
    </div>

    <div class="d-flex gap-2 mb-3 mx-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
        <i class="fa-solid fa-pen-to-square"></i>
      </a>

      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-danger" type="submit">
          <i class="fa-solid fa-trash"></i>
        </button>
      </form>
    </div>

  </div>
</div>
